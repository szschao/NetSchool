{
  "name": "mymodule",
  "version": "0.1.0",
  "author": "Bastian Krol",
  "description": "example project template for a cross platform (node and browser) javascript module",
  "repository": "https://github.com/basti1302/browserify-grunt-mocha-template.git",
  "scripts": {
    "test": "grunt"
  },
  "main": "./mymodule",
  "dependencies": {
    "minimatch": "~3.0.4"
  },
  "devDependencies": {
    "browserify": "~14.5.0",
    "chai": "~4.1.2",
    "grunt": "~1.0.1",
    "grunt-browserify": "~5.2.0",
    "grunt-contrib-clean": "~1.1.0",
    "grunt-contrib-connect": "~1.0.2",
    "grunt-contrib-jshint": "~1.1.0",
    "grunt-contrib-uglify": "~3.1.0",
    "grunt-contrib-watch": "~1.0.0",
    "grunt-mocha-phantomjs": "~4.0.0",
    "grunt-mocha-test": "~0.13.3",
    "mocha": "~4.0.1",
    "sinon": "~4.1.1",
    "sinon-chai": "~2.14.0"
  },
  "browser": {
    "./lib/echo.js": "./browser/lib/shim/echo.js",
    "minimatch": "./browser/lib/shim/minimatch.js",
    "util": "./browser/lib/shim/node-util.js",
    "./lib/optional": false
  },
  "testling": {
    "browsers": [
      "ie9", "ie10",
      "ff/15", "ff/20", "ff/23", "ff/nightly",
      "chrome/29", "chrome/canary",
      "opera/15", "opera/next",
      "safari/6.0"
    ],
    "harness" : "mocha",
    "files": "test/*.js"
  },
  "engines": {
    "node": ">= 0.10.x"
  }
}
